{
  "name": "micro-federation-example",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest --collectCoverage",
    "test:WatchAll": "jest --watchAll",
    "test:host": "jest --collectCoverage -c projects/host/jest.config.js",
    "test:app2-details": "jest --collectCoverage -c projects/app2-details/jest.config.js",
    "test:app3-favorites": "jest --collectCoverage -c projects/app3-favorites/jest.config.js",
    "test:app4-cast": "jest --collectCoverage -c projects/app4-cast/jest.config.js",
    "test:shared-lib": "jest --collectCoverage -c projects/shared-lib/jest.config.js",
    "run:all": "concurrently \"ng serve app2-details\" \"ng serve app3-favorites\" \"ng serve app4-cast\" \"ng serve host\"",
    "build:lib": "ng build shared-lib",
    "prepare": "husky install",
    "test:staged": "jest --coverage --bail --findRelatedTests --passWithNoTests",
    "lint-all": "eslint --fix --ext .ts projects/host projects/app2-details projects/app3-favorites projects/app4-cast projects/shared-lib"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.2",
    "@angular/cdk": "^16.2.12",
    "@angular/common": "^17.3.2",
    "@angular/compiler": "^17.3.2",
    "@angular/core": "^17.3.2",
    "@angular/forms": "^17.3.2",
    "@angular/material": "^16.2.12",
    "@angular/platform-browser": "^17.3.2",
    "@angular/platform-browser-dynamic": "^17.3.2",
    "@angular/router": "^17.3.2",
    "es-module-shims": "^1.5.12",
    "ngx-infinite-scroll": "^17.0.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-architects/native-federation": "^17.1.7",
    "@angular-devkit/build-angular": "^17.3.3",
    "@angular-eslint/eslint-plugin": "14.0.0",
    "@angular-eslint/eslint-plugin-template": "14.0.0",
    "@angular-eslint/template-parser": "^14.0.0",
    "@angular/cli": "~17.3.3",
    "@angular/compiler-cli": "^17.3.2",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-preset-angular": "^13.0.0",
    "lint-staged": "^13.2.2",
    "ng-mocks": "^14.12.1",
    "ng-packagr": "^17.0.2",
    "ngx-build-plus": "^17.0.0",
    "prettier": "^2.8.7",
    "prettier-eslint": "^15.0.1",
    "ts-jest": "^29.1.0",
    "tsarch": "^5.3.0",
    "typescript": "^5.2.2"
  }
}
